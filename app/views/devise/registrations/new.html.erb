<div class="login-box">
  <div class="login-logo">
    <%= link_to(root_path, class: 'logo') do %>
      <b>ICBH</b>Admin</a>
    <% end %>
  </div>
  <!-- /.login-logo -->
  <div class="login-box-body">
    <p class="login-box-msg">Registre-se</p>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group has-feedback">
        <%= f.email_field :email, class:'form-control', placeholder: 'E-mail', autofocus: true %>
      </div>

      <div class="form-group has-feedback">
        <%= f.text_field :name, class:'form-control', placeholder: 'Nome' %>
      </div>

      <div class="form-group has-feedback">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres no m√≠nimo)</em>
        <% end %><br />
        <%= f.password_field :password, class:'form-control', placeholder: 'Senha', autocomplete: "off" %>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, class:'form-control', placeholder: 'Senha', autocomplete: "off" %>
      </div>

      <div class="actions col-xs-4">
        <%= f.submit "Registrar", class: "btn btn-primary btn-block btn-flat" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <!-- /.login-box-body -->
</div>