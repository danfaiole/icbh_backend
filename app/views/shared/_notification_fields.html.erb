<tr class='nested-field-group'>
  <td>
    <%= f.hidden_field :id %>
    <%= f.input :title, label: false, disabled: action_name == 'show' %>
  </td>
  <td><%= f.input :body, label: false, disabled: action_name == 'show' %></td>
  <td>
    <% value = f.object.date.present? ? f.object.date.strftime("%d/%m/%Y %H:%M") : "" %>
    <%= f.text_field :date, value: value, class:'form-control notification-date-field', placeholder: 'dd/mm/aaaa HH:MM', disabled: action_name == 'show' %>
  </td>
  <% if action_name != 'show' %>
    <td>
      <%= f.hidden_field :_destroy, class: 'destroy-field' %>

      <%= link_to(
      '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe ,
      '#', class: 'destroy-link btn btn-default'
      ) %>
    </td>
  <% end %>
</tr>