<%= simple_form_for(@download) do |f| %>
  <%= f.error_notification %>
  <%= div_col_tag('12') do %>
    <div class="form-inputs">
      <%= f.input :title, label: 'Nome do arquivo', disabled: action_name == 'show' %>
      <%= f.input :description, label: 'Descrição do arquivo', disabled: action_name == 'show' %>
      <%= f.input :document, as: :file, label: 'Upload', disabled: action_name == 'show' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
      <%= link_to('Voltar', downloads_path, class: 'btn btn-default') %>
      <%= link_to('Editar arquivo', edit_download_path(@download), class: 'btn btn-default') if action_name == 'show' %>
    </div>
  <% end %>
<% end %>
